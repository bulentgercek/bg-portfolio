{
  "name": "bg-portfolio",
  "version": "1.0.0",
  "description": "This is my personal website development repository. I designed it to fit Namecheap's shared hosting. For this reason, an installation has been created that will be built on Node.js version 14.20.1 and will remain within the scope of shared hosting's libraries.",
  "workspaces": [
    "server/*",
    "client/*"
  ],
  "scripts": {
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "test:server": "cd server && npm run test",
    "test": "\"npm run test:server\"",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build": "concurrently \"npm run build:server\" && \"npm run build:client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bulentgercek/bg-portfolio.git"
  },
  "keywords": [],
  "author": "Bulent Gercek",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bulentgercek/bg-portfolio/issues"
  },
  "homepage": "https://github.com/bulentgercek/bg-portfolio#readme",
  "dependencies": {
    "@hapi/boom": "^10.0.0"
  }
}
